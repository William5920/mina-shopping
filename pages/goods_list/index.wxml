<view class="goods_list">
    <SearchInput></SearchInput>
    <Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
        <block wx:if="{{tabs[0].isActive}}">
            <view class="first_tab">
                <navigator class="goods_item"
                wx:for="{{goodsList}}"
                wx:key="goods_id">
                    <view class="goods_img_wrap">
                        <image mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'http://img3.imgtn.bdimg.com/it/u=2774391408,3578926483&fm=214&gp=0.jpg'}}"></image>
                    </view>
                    <view class="goods_info_wrap">
                        <view class="goods_name">{{item.goods_name}}</view>
                        <view class="goods_price">Â¥{{item.goods_price}}</view>
                    </view>
                </navigator>
            </view>
        </block>
        <block wx:elif="{{tabs[1].isActive}}">
            2
        </block>
        <block wx:else="{{tabs[2].isActive}}">
            3
        </block>
    </Tabs>
</view>
